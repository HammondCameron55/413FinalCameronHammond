@{
}

@model Entertainers

<div class="text-center">
    <h1 class="display-4">Delete Confirmation</h1>
    <p>Are you sure you want to delete this artist?</p>
    <p>@Model.EntStageName</p>
</div>

<form asp-action="DeleteArtist" method="post">
    <input type="hidden" asp-for="EntStageName" />
    <input type="hidden" asp-for="EntSSN" />
    <input type="hidden" asp-for="EntStreetAddress" />
    <input type="hidden" asp-for="EntCity" />
    <input type="hidden" asp-for="EntState" />
    <input type="hidden" asp-for="EntZipCode" />
    <input type="hidden" asp-for="EntPhoneNumber" />
    <input type="hidden" asp-for="EntWebPage" />
    <input type="hidden" asp-for="EntEMailAddress" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-primary" asp-action="ArtistList">Cancel</a>
</form>